<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_container_shadow"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnReport"
        style="@style/ContextMenuButton"
        android:text="登 录 服 务 器"
        android:textColor="#ffff0000" />

    <Button
        android:id="@+id/btnSharePhoto"
        android:layout_below="@id/btnReport"
        style="@style/ContextMenuButton"
        android:text="缓 存 管 理 器" />

    <Button
        android:id="@+id/btnCopyShareUrl"
        style="@style/ContextMenuButton"
        android:text="请 联 系 我" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/ContextMenuButton"
        android:text="退 出 程 序" />

</LinearLayout>