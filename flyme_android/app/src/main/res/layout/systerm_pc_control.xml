<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@drawable/tab4_remote_desk_window_background" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:background="@drawable/tab4_remote_desk_window_background"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/top_back"
            android:layout_width="80.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true">
            <TextView
                android:textSize="20.0sp"
                android:textColor="#ffffffff"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:text="  返回"
                android:drawableLeft="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
        </LinearLayout>
        <TextView
            android:textSize="22.0sp"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远程鼠标"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/Move_field" 
        android:background="@drawable/tab4_mouse_shape_touch" 
        android:layout_width="fill_parent" 
        android:layout_height="430.0dip" 
        android:layout_marginLeft="12.0dip" 
        android:layout_marginTop="1.0dip" 
        android:layout_marginRight="10.0dip">
        <TextView 
            android:textSize="12.0sp" 
            android:textColor="#50ffffff" 
            android:layout_gravity="center_vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="125.0dip" 
            android:text="滑动移动光标" />
    </LinearLayout>
    <LinearLayout 
        android:background="@drawable/tab4_mouse_shape_touch" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="12.0dip" 
        android:layout_marginTop="4.0dip" 
        android:layout_marginRight="10.0dip">
        <Button android:textSize="14.0sp" 
            android:textColor="@drawable/tab4_mousemove_button" 
            android:id="@+id/btn_left" 
            android:background="@null" 
            android:layout_width="0.0dip" 
            android:layout_height="50.0dip" 
            android:text="左键" 
            android:layout_weight="1.0" />
        <Button 
            android:layout_gravity="center" 
            android:background="#ff558ec5" 
            android:layout_width="1.0dip" 
            android:layout_height="30.0dip" />
        <Button android:textSize="14.0sp" 
            android:textColor="@drawable/tab4_mousemove_button" 
            android:id="@+id/btn_right" 
            android:background="@null" 
            android:layout_width="0.0dip" 
            android:layout_height="50.0dip" 
            android:layout_marginLeft="-1.0dip" 
            android:text="右键" 
            android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Linear_Button" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="14.0dip" 
        android:layout_marginTop="15.0dip" 
        android:layout_marginRight="10.0dip">
        <ImageButton 
            android:textSize="14.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/windows" 
            android:background="@drawable/tab4_btn_gray_corner" 
            android:layout_width="0.0dip" 
            android:layout_height="50.0dip" 
            android:src="@mipmap/tab4_micro_log"
            android:text="" 
            android:layout_weight="1.0" />
        <Button android:textSize="14.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/esc" 
            android:background="@drawable/tab4_btn_gray_corner" 
            android:layout_width="0.0dip" 
            android:layout_height="50.0dip" 
            android:layout_marginLeft="2.0dip" 
            android:text="返回" 
            android:layout_weight="1.0" />
        <Button android:textSize="14.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/delete" 
            android:background="@drawable/tab4_btn_gray_corner" 
            android:layout_width="0.0dip" 
            android:layout_height="50.0dip" 
            android:layout_marginLeft="2.0dip" 
            android:text="删除" 
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>