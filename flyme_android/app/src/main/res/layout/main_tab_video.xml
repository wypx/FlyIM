<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clickable="true">

    <me.smart.flyme.view.wiget.FlatTabGroup
        android:layout_marginTop="8dp"
        android:id="@+id/tab3_flatgroup"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:tab_border_color="#03a9f4"
        app:tab_border_width="1dp"
        app:tab_contents="状态,预览,其他"
        app:tab_radius="45dp"
        app:tab_textSize="16sp" />
    <FrameLayout
        android:id="@+id/tab3_fl_main"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tab3_flatgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>


</RelativeLayout>
